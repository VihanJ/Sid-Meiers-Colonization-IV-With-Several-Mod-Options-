	</Define>
	<Define>
		<DefineName>CREW_FORMATION_PRICE</DefineName>
		<!--TODO-->
		<iDefineIntVal>300</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>MERCHANT_CREW_FORMATION_PRICE</DefineName>
		<!--TODO-->
		<iDefineIntVal>1000</iDefineIntVal>
	</Define>
	<Define>
		<DefineName>MERCHANT_CREW_FORMATION_TURN</DefineName>
